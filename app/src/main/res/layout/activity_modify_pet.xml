<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/data_bg_gradient"
    android:scrollbarSize="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/BreedIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:src="@drawable/default_pet_icon"
        android:scaleType="centerCrop"
        android:background="#ADC6FB"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp"
        />

    <RelativeLayout
        android:id="@+id/DataContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/BreedIV"
        android:layout_marginTop="20dp"
        android:background="@drawable/data_simulated_card">

        <TextView
            android:id="@+id/NameTVMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/saintpeter"
            android:padding="10dp"
            android:text="Nombre"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/NameET2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/NameTVMod"
            android:ems="14"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLength="30"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#4E4E4E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/AgeTVMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameTVMod"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/saintpeter"
            android:padding="10dp"
            android:text="Edad"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/AgeETMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameTVMod"
            android:layout_alignStart="@id/NameET2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/AgeTVMod"
            android:ems="14"
            android:hint="Edad"
            android:inputType="number"
            android:maxLength="2"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#4E4E4E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/WeightTVMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AgeTVMod"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/saintpeter"
            android:padding="10dp"
            android:text="Peso"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/WeightETMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AgeTVMod"
            android:layout_alignStart="@id/NameET2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/WeightTVMod"
            android:ems="14"
            android:hint="Peso"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#4E4E4E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/BreedTVMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WeightTVMod"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/saintpeter"
            android:padding="10dp"
            android:text="Raza"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/BreedSPMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WeightTVMod"
            android:layout_alignStart="@id/WeightETMod"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/BreedTVMod"
            android:padding="10dp"
            android:scrollbarSize="15dp" />

        <TextView
            android:id="@+id/GenreTVMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/BreedTVMod"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/saintpeter"
            android:padding="10dp"
            android:text="GÃ©nero"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/GenreSPMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/BreedTVMod"
            android:layout_alignStart="@id/WeightETMod"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/BreedTVMod"
            android:padding="10dp"
            android:scrollbarSize="15dp" />

        <LinearLayout
            android:id="@+id/ButtonsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GenreSPMod"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/DeletePetBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="45"
                android:padding="10dp"
                android:text="Eliminar" />

            <Button
                android:id="@+id/ModifyPetBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/DeletePetBTN"
                android:layout_weight="45"
                android:padding="10dp"
                android:text="Modificar" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>