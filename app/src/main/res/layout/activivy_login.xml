<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/BackgroundIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:src="@drawable/loginbg" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/IconIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="app icon"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/app_icon"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/PetDayTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LoginRL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/saintpeter"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="5dp"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Pet Daycare"
        android:textAlignment="center"
        android:textColor="#CA3F09"
        android:textSize="60sp"
        />

    <TextView
        android:id="@+id/petDayHighLightTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LoginRL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/saintpeter"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="5dp"
        android:shadowColor="#FFD1BC"
        android:shadowDx="-5"
        android:shadowDy="-4"
        android:shadowRadius="1"
        android:text="Pet Daycare"
        android:textAlignment="center"
        android:textColor="#F36934"
        android:textSize="60sp"
        />

    <RelativeLayout
        android:id="@+id/LoginRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/login_card"
        android:padding="20dp">

        <TextView
            android:id="@+id/WelcomeHighLightTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/saintpeter"
            android:letterSpacing="0.05"
            android:padding="4dp"
            android:shadowColor="#CEE1FF"
            android:shadowDx="-4"
            android:shadowDy="-1"
            android:shadowRadius="5"
            android:text="Bienvenido "
            android:textColor="#0E88F4"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/WelcomeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/saintpeter"
            android:letterSpacing="0.05"
            android:padding="4dp"
            android:shadowColor="#001D75"
            android:shadowDx="8"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="Bienvenido "
            android:textColor="#507CFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/UserAlertTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PassET"
            android:layout_alignStart="@id/PassET"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:padding="7dp"
            android:text="- Introduzca un correo válido"
            android:textColor="#B50303"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/PassAlertTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserAlertTV"
            android:layout_alignStart="@id/PassET"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:padding="7dp"
            android:text="- La contraseña debe tener al menos: \n ●     6 Caracteres \n ●     1 Letra Minúscula \n ●     1 Letra Mayúscula \n ●     1 Dígito&quot;"
            android:textAlignment="viewStart"
            android:textColor="#B50303"
            android:textSize="16sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/UserET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/WelcomeTV"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/login_box_style"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:maxLength="60"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#777777"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/PassET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserET"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/login_box_style"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="40"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#777777"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ButtonsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PassAlertTV"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/loginRL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/buttons_pet_data">

                <Button
                    android:id="@+id/LoginBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="casual"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RegisterRL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/buttons_pet_data">

                <Button
                    android:id="@+id/RegisterBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="casual"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="normal" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>